# path: .env.example
# Telegram AI Group Finance Assistant - Environment Configuration

# ====================
# TELEGRAM CONFIGURATION
# ====================
# Bot token from @BotFather
TELEGRAM_TOKEN=your_telegram_bot_token_here

# ====================
# GOOGLE SHEETS CONFIGURATION
# ====================
# Path to service account credentials JSON file
GOOGLE_CREDENTIALS_PATH=credentials.json

# Service account email (for reference when sharing spreadsheets)
SERVICE_ACCOUNT_EMAIL=your-service-account@project-id.iam.gserviceaccount.com

# Master spreadsheet ID (create a spreadsheet and copy ID from URL)
# URL format: https://docs.google.com/spreadsheets/d/SPREADSHEET_ID/edit
MASTER_SHEET_ID=your_master_spreadsheet_id_here

# ====================
# AI CONFIGURATION
# ====================
# OpenAI API key for AI responses
OPENAI_API_KEY=your_openai_api_key_here

# AI Model to use (default: gpt-4o-mini)
AI_MODEL=gpt-4o-mini

# Maximum tokens for AI responses
AI_MAX_TOKENS=1000

# AI temperature (0.0 - 1.0, lower = more deterministic)
AI_TEMPERATURE=0.7

# ====================
# APPLICATION SETTINGS
# ====================
# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: Log to file
# LOG_FILE=logs/financebot.log

# ====================
# ADMIN CONFIGURATION
# ====================
# Comma-separated list of super admin Telegram user IDs
# Super admins have full access to all bot features
SUPER_ADMIN_IDS=123456789,987654321

# ====================
# MEMORY CONFIGURATION
# ====================
# Maximum messages to store in memory per group
MEMORY_MAX_MESSAGES=50

# Context window size for AI (number of recent messages to include)
CONTEXT_WINDOW_SIZE=10

# ====================
# DEFAULT SETTINGS
# ====================
# Default language (id = Indonesian, en = English)
DEFAULT_LANGUAGE=id

# Default bot persona (professional, friendly, efficient, motivational)
DEFAULT_PERSONA=professional

# Default currency
DEFAULT_CURRENCY=IDR

# Default timezone
DEFAULT_TIMEZONE=Asia/Jakarta

# ====================
# RATE LIMITING
# ====================
# Maximum messages per window
RATE_LIMIT_MESSAGES=30

# Rate limit window in seconds
RATE_LIMIT_WINDOW=60

# ====================
# WEBHOOK (OPTIONAL)
# ====================
# Webhook URL for production (leave empty for polling mode)
# WEBHOOK_URL=https://your-domain.com/webhook

# Webhook port
# WEBHOOK_PORT=8443
